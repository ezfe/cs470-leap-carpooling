doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(
      name="viewport",
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    )
    
    // Bootstrap CSS
    link(
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha256-L/W5Wfqfa0sdBNIKN9cG6QA5F2qx4qICmU2VgLruv9Y="
      crossorigin="anonymous"
    )

    link(
      rel="stylesheet"
      href="/static/sitewide-styles.css"
    )

    title
      block title
      | LEAP Carpooling

    block header_extension
  body

    block navbar_settings
      - var current_page = "base"
    
    block navbar_content
      nav.navbar.navbar-expand-sm.navbar-dark.mb-4
        .container
          a.navbar-brand(href="/")
            i.fas.fa-frog.mr-2
            | LEAP Lifts
            i.fas.fa-car.ml-2
          
          button.navbar-toggler(
            type="button"
            data-toggle="collapse"
            data-target="#navbarCollapsableContent"
            aria-controls="navbarCollapsableContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          )
            span.navbar-toggler-icon
          
          .collapse.navbar-collapse#navbarCollapsableContent
            ul.navbar-nav.mr-auto
              -
                const navElements = [
                  {
                    title: 'Home',
                    name: 'homepage',
                    url: '/'
                  },
                  {
                    title: 'Dashboard',
                    name: 'dashboard',
                    url: '/trips'
                  },
                  {
                    title: 'Onboard',
                    name: 'onboard',
                    url: '/onboard'
                  }
                ]
              each nav in navElements
                li.nav-item(class=(current_page == nav.name ? 'active' : ''))
                  a.nav-link(href=nav.url)= nav.title
            ul.navbar-nav
              if user_logged_in
                li.nav-item.dropdown
                  a.nav-link.dropdown-toggle(
                    href="#",
                    role="button",
                    data-toggle="dropdown",
                    aria-haspopup="true",
                    aria-expanded="false"
                  )= user_preferred_name
                  div.dropdown-menu(aria-labelledby="navbarDropdown")
                    a.dropdown-item(href="#")
                      i.fas.fa-cog
                      = ' Settings'
                    a.dropdown-item(href="/sessions/logout")
                      i.fas.fa-sign-out-alt
                      = ' Sign Out'
              else
                li.nav-item
                  a.nav-link(href="/sessions/login") Sign in or Register

    block body_content
      .container
        block content
          p This page has no content right now!
    
